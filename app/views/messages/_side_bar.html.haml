.side_bar
  .side_header
    .side_header__box
      %p.side_header__box__user-name
        = current_user.name
      %ul.side_header__box__menu 
        %li.side_header__box__menu__new-group
          = link_to new_group_path do
            = icon 'far fa-edit',class:"new"
        %li.side_header__box__menu__edit-user
          = link_to edit_user_path(current_user) do
            = icon 'fa fa-cog',class:"edit"
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group),class:"group" do
          .group__group-name
            = group.name
          .group__latest-message
            = group.show_last_message
