.main_chat
  .main_header
    .main_header__left-side
      %h2.main_header__left-side__current-group
        group1
      %ul.main_header__left-side__member-list
        Member:
        %li.main_header__left-side__member-list__member atsushi
    = link_to '#' do
      .main_header__edit-btn Edit
  .messages
    = render @messages
  .form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
      .input-box
        = f.label :image, class: "input-box__image" do
          = icon('fas','image')
          = f.file_field :image, class:"input-box__image__file"
      = f.submit 'Send', class: "submit-btn"